<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:orientation="vertical"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <LinearLayout android:id="@+id/panel"
        android:layout_width="fill_parent" android:weightSum="1.0" android:visibility="visible"
        android:gravity="center_vertical"
        android:layout_height="fill_parent">
        <TextView android:id="@+id/msg"
            android:text="@string/loading" android:layout_width="fill_parent"
            android:gravity="center_horizontal" android:textSize="38dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <ListView
        android:id="@+id/feed"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:cacheColorHint="#000000"
        android:clickable="true"
        android:divider="@drawable/listdivider"
        android:dividerHeight="1dip"
        android:drawSelectorOnTop="false"
        android:fadingEdge="none"
        android:fastScrollEnabled="true"
        android:focusable="true"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="true"
        android:listSelector="@color/transparent_black_hex_0"
        android:longClickable="true"
        android:scrollingCache="true"
        android:scrollbarStyle="outsideOverlay"
        android:visibility="gone"
        android:clipToPadding="false"/>

</LinearLayout>
